<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:controller="com.igoresparza.PrimaryController"
          maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="85.0" />
        <ColumnConstraints hgrow="ALWAYS" percentWidth="15.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="30.0" maxHeight="30.0" vgrow="NEVER" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" maxHeight="30.0" vgrow="NEVER" />
        <RowConstraints minHeight="100.0" prefHeight="200.0" vgrow="ALWAYS" />
        <RowConstraints minHeight="30.0" prefHeight="30.0" maxHeight="30.0" vgrow="NEVER" />
    </rowConstraints>
    <children>
        <HBox prefHeight="67.0" prefWidth="300.0">
            <children>
                <Label text="Name:" styleClass="main-label" prefHeight="43.0" prefWidth="59.0"/>
                <TextField fx:id="nameField" prefHeight="30.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>

        <!-- Botón OK -->
        <Button fx:id="okBtn" text="OK"
                onAction="#handleOk"
                GridPane.columnIndex="1" GridPane.rowIndex="0"
                GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                maxWidth="Infinity" maxHeight="Infinity" />

        <!-- Botón Cancel -->
        <Button fx:id="cancelBtn" text="Cancel"
                onAction="#handleCancel"
                GridPane.columnIndex="1" GridPane.rowIndex="1"
                GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                maxWidth="Infinity" maxHeight="Infinity" />

        <Label text="Description:" GridPane.rowIndex="1" styleClass="main-label"/>
        <TextArea fx:id="descriptionArea" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2" />
        <Label text="Status: Ready" GridPane.columnSpan="2" GridPane.rowIndex="3" />
    </children>
</GridPane>


